    <section class="about spad">
        <h1 class="text-center">Détails de l'élève</h1>

        <div class="eleve-details">
            <dl>
                <dt>Nom :</dt>
                <dd>{{ eleve.nom ?? 'Non spécifié' }}</dd>

                <dt>Prénom :</dt>
                <dd>{{ eleve.prenom ?? 'Non spécifié' }}</dd>

                <dt>Email :</dt>
                <dd>{{ eleve.email ?? 'Non spécifié' }}</dd>

                <dt>Âge :</dt>
                <dd>{{ eleve.age is not null ? eleve.age ~ ' ans' : 'Non spécifié' }}</dd>
            </dl>
        </div>

        <div class="eleve-actions text-center my-4">
            <a href="{{ path('eleve_new', {'id': eleve.id}) }}" class="btn btn-warning">Modifier</a>
            <form method="post" action="{{ path('eleve_delete', {'id': eleve.id}) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élève ?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eleve.id) }}">
                <button class="btn btn-danger">Supprimer</button>
            </form>
            <a href="{{ path('eleve_list') }}" class="btn btn-secondary">Retour à la liste</a>
        </div>
    </section>
