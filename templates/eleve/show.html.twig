{% extends 'base.html.twig' %}
{% set exclude_temoignage = true %}
{% set exclude_teams = true %}

{% block title %}Détails de l'élève{% endblock %}

{% block body %}
    <section class="about spad py-5">
        <!-- Breadcrumb -->
        <div class="breadcrumb-option spad set-bg" data-setbg="img/breadcrumb-bg.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="breadcrumb__text">
                            <h1 class="text-uppercase text-white">
                                <i class="fa-solid fa-user-graduate me-2"></i>{{ eleve.prenom }} {{ eleve.nom }}
                            </h1>
                            <p class="breadcrumb-links mt-3">
                                <a href="{{ path('app_homepage') }}" class="text-decoration-none text-light">
                                    <i class="fa-solid fa-home me-1"></i>Accueil
                                </a>
                                <span class="mx-2">/</span>
                                <span class="text-primary">{{ eleve.prenom }}</span>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Breadcrumb -->

        <div class="container mt-5">
            <!-- Student Profile Card -->
            <div class="card border-0 shadow mb-5">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <!-- Avatar -->
                        <div class="col-md-4 text-center p-4 bg-light">
                            <div class="mb-3">
                                {% if eleve.avatar %}
                                    <img src="{{ asset('uploads/avatars/' ~ eleve.avatar) }}" alt="Avatar de {{ eleve.nom }}" 
                                         class="rounded-circle img-fluid shadow" 
                                         style="width: 180px; height: 180px; object-fit: cover; border: 4px solid white;">
                                {% else %}
                                    <div class="rounded-circle bg-secondary d-flex justify-content-center align-items-center shadow mx-auto" 
                                         style="width: 180px; height: 180px; border: 4px solid white;">
                                        <i class="fa-solid fa-user-slash fa-4x text-white"></i>
                                    </div>
                                {% endif %}
                            </div>

                            <!-- Actions -->
                            <div class="d-flex flex-column gap-2 mt-4">
                                <a href="{{ path('eleve_new', {'id': eleve.id}) }}" class="btn btn-warning btn-sm">
                                    <i class="fa-solid fa-pen me-2"></i>Modifier le profil
                                </a>
                                <form method="post" action="{{ path('eleve_delete', {'id': eleve.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet élève ?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ eleve.id) }}">
                                    <button class="btn btn-danger btn-sm w-100">
                                        <i class="fa-solid fa-trash me-2"></i>Supprimer
                                    </button>
                                </form>
                                <a href="{{ path('eleve_list') }}" class="btn btn-secondary btn-sm">
                                    <i class="fa-solid fa-arrow-left me-2"></i>Retour à la liste
                                </a>
                            </div>
                        </div>

                        <!-- Informations détaillées -->
                        <div class="col-md-8 p-4">
                            <h3 class="card-title border-bottom pb-3 mb-4">
                                <i class="fa-solid fa-id-card me-2 text-primary"></i>Informations personnelles
                            </h3>
                            <div class="row g-3">
                                <div class="col-sm-6">
                                    <div class="info-item">
                                        <span class="text-muted small d-block">Nom</span>
                                        <span class="fw-bold fs-5">{{ eleve.nom ?? 'Non spécifié' }}</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="info-item">
                                        <span class="text-muted small d-block">Prénom</span>
                                        <span class="fw-bold fs-5">{{ eleve.prenom ?? 'Non spécifié' }}</span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="info-item">
                                        <span class="text-muted small d-block">Email</span>
                                        {% if eleve.email %}
                                            <a href="mailto:{{ eleve.email }}" class="text-decoration-none">
                                                <i class="fa-solid fa-envelope me-1 text-primary"></i>{{ eleve.email }}
                                            </a>
                                        {% else %}
                                            <span>Non spécifié</span>
                                        {% endif %}
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="info-item">
                                        <span class="text-muted small d-block">Âge</span>
                                        <span>
                                            <i class="fa-solid fa-calendar-days me-1 text-primary"></i>
                                            {{ eleve.age is not null ? eleve.age ~ ' ans' : 'Non spécifié' }}
                                        </span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="info-item">
                                        <span class="text-muted small d-block">Classe</span>
                                        <span>
                                            <i class="fa-solid fa-graduation-cap me-1 text-primary"></i>
                                            {{ eleve.classe ?? 'Non spécifiée' }}
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Notes Section -->
            <div class="card shadow border-0 mb-5">
                <div class="card-header bg-primary text-white p-3">
                    <h3 class="m-0">
                        <i class="fa-solid fa-chart-line me-2"></i>Suivi académique de {{ eleve.prenom }}
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <h4 class="text-primary mb-0">
                            <i class="fa-solid fa-book me-2"></i>Notes et moyennes
                        </h4>
                        <a href="{{ path('note_new', { id: eleve.id }) }}" class="btn btn-success">
                            <i class="fa-solid fa-plus me-2"></i>Ajouter une note pour une nouvelle matière
                        </a>
                    </div>

                    <!-- Moyenne globale -->
                    {% if moyenneGlobale is defined and notes|length > 0 %}
                    <div class="row mb-4">
                        <div class="col-md-6 mb-4 mb-md-0">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header {% if moyenneGlobale >= 10 %}bg-success{% else %}bg-danger{% endif %} text-white">
                                    <h5 class="m-0">
                                        <i class="fa-solid fa-calculator me-2"></i>Moyenne globale
                                    </h5>
                                </div>
                                <div class="card-body text-center d-flex flex-column justify-content-center">
                                    <h1 class="display-4 {% if moyenneGlobale >= 10 %}text-success{% else %}text-danger{% endif %} mb-3">
                                        {{ moyenneGlobale }}/20
                                    </h1>
                                    <div class="progress" style="height: 25px;">
                                        <div class="progress-bar {% if moyenneGlobale >= 10 %}bg-success{% else %}bg-danger{% endif %}" 
                                             role="progressbar" 
                                             style="width: {{ (moyenneGlobale / 20) * 100 }}%;" 
                                             aria-valuenow="{{ moyenneGlobale }}" 
                                             aria-valuemin="0" 
                                             aria-valuemax="20">
                                            {{ moyenneGlobale }}/20
                                        </div>
                                    </div>
                                    <div class="mt-3 text-muted">
                                        <small>
                                            {% if moyenneGlobale >= 10 %}
                                                <i class="fa-solid fa-circle-check text-success me-1"></i>Au-dessus de la moyenne
                                            {% else %}
                                                <i class="fa-solid fa-circle-exclamation text-danger me-1"></i>En dessous de la moyenne
                                            {% endif %}
                                        </small>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Graphique d'évolution -->
                        <div class="col-md-6">
                            <div class="card h-100 border-0 shadow-sm">
                                <div class="card-header bg-info text-white">
                                    <h5 class="m-0">
                                        <i class="fa-solid fa-chart-line me-2"></i>Évolution de l'élève
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="evolutionChart"></canvas>
                                </div>
                            </div>
                        </div>
                    </div>
                    {% endif %}

                    <!-- Moyennes par matière -->
                    <div class="card border-0 shadow-sm mb-4">
                        <div class="card-header bg-primary text-white">
                            <h5 class="m-0">
                                <i class="fa-solid fa-book me-2"></i>Moyennes par matière
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if moyennesParMatiere|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Matière</th>
                                                <th>Moyenne sur 20</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for id, matiere in moyennesParMatiere %}
                                                <tr>
                                                    <td>
                                                        <span class="fw-bold">{{ matiere.nom }}</span>
                                                    </td>
                                                    <td>
                                                        <span class="badge {% if matiere.moyenne >= 10 %}bg-success{% else %}bg-danger{% endif %} p-2">
                                                            {{ matiere.moyenne }}/20
                                                        </span>
                                                    </td>
                                                    <td>
                                                        <a href="{{ path('note_new_for_matiere', {'id': eleve.id, 'matiere_id': id}) }}" 
                                                           class="btn btn-sm btn-outline-success">
                                                            <i class="fa-solid fa-plus me-1"></i>Ajouter note
                                                        </a>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fa-solid fa-info-circle me-2"></i>Aucune moyenne disponible pour cet élève.
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <!-- Détail des notes -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="m-0">
                                <i class="fa-solid fa-list-check me-2"></i>Détail des notes
                            </h5>
                        </div>
                        <div class="card-body">
                            {% if notes|length > 0 %}
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Matière</th>
                                                <th>Note</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for note in notes %}
                                                <tr>
                                                    <td>{{ note.matiere.nom }}</td>
                                                    <td>
                                                        <span class="badge {% if note.note >= 10 %}bg-success{% else %}bg-danger{% endif %} p-2">
                                                            {{ note.note }}/20
                                                        </span>
                                                    </td>
                                                </tr>
                                            {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    <i class="fa-solid fa-info-circle me-2"></i>Aucune note disponible pour cet élève.
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% block javascripts %}
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        {% if notes|length > 0 %}
        // Données pour le graphique
        var ctx = document.getElementById('evolutionChart').getContext('2d');

        // Préparer les données par matière
        var labels = [];
        var datasets = [];
        var colors = ['#4BC0C0', '#36A2EB', '#FF6384', '#FFCE56', '#9966FF', '#FF9F40'];

        {% for id, matiere in moyennesParMatiere %}
            labels.push('{{ matiere.nom }}');
        {% endfor %}

        // Créer un dataset pour les moyennes par matière
        var moyennesData = [];
        {% for id, matiere in moyennesParMatiere %}
            moyennesData.push({{ matiere.moyenne }});
        {% endfor %}

        // Créer un dataset pour la moyenne globale (ligne horizontale)
        var moyenneGlobaleData = Array(labels.length).fill({{ moyenneGlobale }});

        // Créer le graphique
        var myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: labels,
                datasets: [
                    {
                        label: 'Moyenne par matière',
                        data: moyennesData,
                        backgroundColor: colors.slice(0, moyennesData.length),
                        borderColor: colors.slice(0, moyennesData.length).map(color => color.replace('0.8', '1')),
                        borderWidth: 1
                    },
                    {
                        label: 'Moyenne globale',
                        data: moyenneGlobaleData,
                        type: 'line',
                        fill: false,
                        borderColor: '{{ moyenneGlobale >= 10 ? "#28a745" : "#dc3545" }}',
                        borderWidth: 2,
                        pointRadius: 0,
                        borderDash: [5, 5]
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        max: 20,
                        title: {
                            display: true,
                            text: 'Note sur 20'
                        },
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    },
                    x: {
                        grid: {
                            color: 'rgba(0, 0, 0, 0.05)'
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            usePointStyle: true,
                            padding: 15
                        }
                    },
                    tooltip: {
                        backgroundColor: 'rgba(0, 0, 0, 0.7)',
                        padding: 10,
                        titleFont: {
                            size: 14
                        },
                        bodyFont: {
                            size: 13
                        }
                    }
                }
            }
        });
        {% endif %}
    });
</script>
{% endblock %}
{% endblock %}
