
{% extends 'base.html.twig' %}

{% block title %}Liste des élèves{% endblock %}

{% block body %}
    <div class="container mt-5 pt-5">
        <h1 class="mb-4 text-center">Liste des élèves</h1>

        <div class="d-flex justify-content-center mb-4">
            <a href="{{ path('eleve_new') }}" class="btn btn-success btn-lg">Ajouter un élève</a>
        </div>

        <div class="eleves-list row">
            {% if eleve %}
                {% for eleve in eleve %}
                    <div class="col-md-4 mb-3">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ eleve.nom }} {{ eleve.prenom }}</h5>
                                <a href="{{ path('eleve_show', {'id': eleve.id}) }}" class="btn btn-primary btn-sm">Voir</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p class="text-center">Aucun élève trouvé.</p>
            {% endif %}
        </div>
    </div>
{% endblock %}

{% block footer %}
    <footer class="bg-dark text-white text-center py-3 mt-auto">
        <div class="container">
            &copy; {{ "now"|date("Y") }} - MonSite. Tous droits réservés.
        </div>
    </footer>
{% endblock %}
