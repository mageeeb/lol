{# templates/eleve/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Ajouter un élève{% endblock %}

{% block body %}
    <section class="about spad">
        <div class="container my-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-primary">Ajouter un élève</h1>
                <a href="{{ path('eleve_list') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    {{ form_errors(form) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom, 'Nom *', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prenom, 'Prénom *', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le prénom'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.email, 'E-mail *', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'adresse e-mail'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.age, 'Âge *', {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(form.age, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'âge'}}) }}
                            {{ form_errors(form.age) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.sexe, {'label': 'Sexe', 'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(form.classe, {'label': 'Classe', 'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            {{ form_row(form.avatar, {'label': 'Photo de profil', 'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        {{ form_row(form.save, {'label': 'Enregistrer'}) }}
                    </div>

                    {{ form_rest(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}