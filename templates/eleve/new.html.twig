{% extends 'base.html.twig' %}
{% set exclude_temoignage = true %}
{% set exclude_teams = true %}

{% block title %}Ajouter un élève{% endblock %}

{% block body %}
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    <section class="about spad">
        <div class="container my-5">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="text-primary">Ajouter un élève</h1>
                <a href="{{ path('eleve_list') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour à la liste
                </a>
            </div>

            {% for message in app.flashes('error') %}
                <div class="alert alert-danger">
                    {{ message }}
                </div>
            {% endfor %}

            <div class="card shadow-sm">
                <div class="card-body">
                    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                    {{ form_errors(form) }} {# Erreurs globales du formulaire #}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.nom, 'Nom *', {'label_attr': {'class': 'form-label'}}) }}
                            {% set fieldClass = 'form-control' %}
                            {% if form.nom.vars.errors|length > 0 %}
                                {% set fieldClass = fieldClass ~ ' is-invalid' %}
                            {% endif %}
                            {{ form_widget(form.nom, {'attr': {'class': fieldClass, 'placeholder': 'Entrez le nom'}}) }}
                            {{ form_errors(form.nom) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.prenom, 'Prénom *', {'label_attr': {'class': 'form-label'}}) }}
                            {% set fieldClass = 'form-control' %}
                            {% if form.prenom.vars.errors|length > 0 %}
                                {% set fieldClass = fieldClass ~ ' is-invalid' %}
                            {% endif %}
                            {{ form_widget(form.prenom, {'attr': {'class': fieldClass, 'placeholder': 'Entrez le prénom'}}) }}
                            {{ form_errors(form.prenom) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.email, 'E-mail *', {'label_attr': {'class': 'form-label'}}) }}
                            {% set fieldClass = 'form-control' %}
                            {% if form.email.vars.errors|length > 0 %}
                                {% set fieldClass = fieldClass ~ ' is-invalid' %}
                            {% endif %}
                            {{ form_widget(form.email, {'attr': {'class': fieldClass, 'placeholder': 'Entrez l\'adresse e-mail'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_label(form.age, 'Âge *', {'label_attr': {'class': 'form-label'}}) }}
                            {% set fieldClass = 'form-control' %}
                            {% if form.age.vars.errors|length > 0 %}
                                {% set fieldClass = fieldClass ~ ' is-invalid' %}
                            {% endif %}
                            {{ form_widget(form.age, {'attr': {'class': fieldClass, 'placeholder': 'Entrez l\'âge'}}) }}
                            {{ form_errors(form.age) }}
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button class="btn btn-success">
                            <i class="fas fa-save"></i> Ajouter
                        </button>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}