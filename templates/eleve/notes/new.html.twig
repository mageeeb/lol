{% block title %}Ajouter une Note{% endblock %}

{% block body %}
<section class="about spad">
    <div class="container mt-5">
        <h1>Ajouter une note pour {{ eleve.prenom }} {{ eleve.nom }}</h1>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.matiere) }}
                {{ form_widget(form.matiere, { 'attr': {'class': 'form-control'} }) }}
                {{ form_errors(form.matiere) }}
            </div>

            <div class="form-group mt-3">
                {{ form_label(form.note) }}
                {{ form_widget(form.note, { 'attr': {'class': 'form-control', 'placeholder': 'Entrez la note'} }) }}
                {{ form_errors(form.note) }}
            </div>

            <button type="submit" class="btn btn-primary mt-4">Enregistrer</button>
        {{ form_end(form) }}
    </div>
</section>

